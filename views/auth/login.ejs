<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body shadow">
                        <h5 class="card-title text-center">Sign In</h5>
                        <form class="form-signin" action="/login" method="POST">
                            <div class="form-label-group">
                                <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address"
                                    autofocus>
                                <!-- <label for="inputEmail">Email address</label> -->
                            </div>

                            <div class="form-label-group">
                                <input type="password" style="margin-top: 20px;" name="password" id="inputPassword"
                                    class="form-control" placeholder="Password">
                                <!-- <label for="inputPassword">Password</label> -->
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                <input style="margin-top: 20px;" type="checkbox" class="custom-control-input" id="customCheck1">
                                <label style="margin-top: 20px;" class="custom-control-label" for="customCheck1">Remember
                                    password</label>
                            </div>
                            <button style="margin-top: 20px;" class="btn btn-lg btn-primary btn-block text-uppercase"
                                type="submit">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<%- include('../includes/head.ejs') %>

<style>

  .mtopbottom{
    margin-top: 50px;
    margin-bottom: 100px;
  }

</style>

</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <div class="container mtopbottom">
    <div class="row">


      <% if (products.length > 0) { %>
      <% products.forEach(p => { %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 shadow">
          <a href="#"><img style=" width: 100%; height: 200px; object-fit: cover;" class="card-img-top" src="<%= p.productId.imageUrl %>"
              alt="<%= p.productId.name %>"></a>
          <div class="card-body">
            <h4 class="card-title">
              <%= p.productId.name %>
            </h4>
            <h5>
              <span class="badge badge-pill  badge-warning ">DZD
                <%= p.productId.price %></span>
            </h5>
            <!-- <p class="card-text" style=" height: 100px;">
                      <%= p.productId.description %>
                    </p> -->
            <form action="/cart-delete-item" method="POST">
              <div class="row">

                <div class="col-xs-4"><a href="/products/<%= p.productId.id %>" class="btn btn-info">Details</a></div>
                <input type="hidden" value="<%= p.productId.id %>" name="productId">
                <div class="col-xs-4"></div><button class="btn btn-danger" style="margin-left: 7px;" type="submit">Delete</button>

              </div>
            </form>
          </div>
          <div class="card-footer">
            <small class="">
              <%= p.productId.productType %></small>
          </div>
        </div>



      </div>
      <% }) %>
      <% } else { %>
      <h1>No Products in Cart!</h1>
      <% } %>

    </div>
  </div>
  <%- include('../includes/footer.ejs') %>
  <%- include('../includes/end.ejs') %>